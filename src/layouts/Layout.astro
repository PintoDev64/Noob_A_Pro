---
import Navbar from "../components/Navbar.astro";
import Side from "../components/Side.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<script>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({
					"gtm.start": new Date().getTime(),
					event: "gtm.js",
				});
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-PWDV8LMZ");
		</script>
		<meta
			name="description"
			content="Sistema para enviar sus demos/partidas directamente al canal Znorux"
		/>
		<meta name="viewport" content="width=device-width" />
		<meta property="og:title" content="De Noob A Pro | Znorux" />
		<meta
			property="og:image"
			content="https://i.ytimg.com/vi/TFHVlmYWU90/maxresdefault.jpg"
		/>
		<meta property="og:image:width" content="1280" />
		<meta property="og:image:height" content="720" />
		<meta property="og:url" content="https://noob-a-pro.vercel.app/" />
		<meta property="og:site_name" content="De Noob A Pro | Znorux" />
		<meta
			property="og:description"
			content="Sistema para enviar sus demos/partidas directamente al canal Znorux"
		/>
		<meta name="twitter:title" content="De Noob A Pro | Znorux" />
		<meta
			name="twitter:description"
			content="Sistema para enviar sus demos/partidas directamente al canal Znorux"
		/>
		<meta
			name="twitter:image"
			content="https://i.ytimg.com/vi/TFHVlmYWU90/maxresdefault.jpg"
		/>
		<link
			rel="shortcut icon"
			type="image/x-icon"
			href="./images/iconpage.jpg"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PWDV8LMZ"
			height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<Navbar />
		<div class="Pages">
			<slot />
		</div>
		<Side />
	</body>
</html>

<style is:global>
	:root {
		--Navbar_BackgroundColor: #41423f;
		--Navbar_Height: 50px;
		--ColoredText: #8ec9e6;
		--ColoredBase: #ffffff;
	}

	::-webkit-scrollbar {
		width: 10px;
		border: none;
	}

	body {
		margin: 0;
		overflow-x: hidden;
	}

	.ZnoruxIcon-img {
		border-radius: 50%;
	}

	/* Navbar */
	.NavbarMain {
		background-repeat: repeat-x;
		background-color: var(--Navbar_BackgroundColor);
		display: flex;
		height: var(--Navbar_Height);
		width: 100%;
	}

	.NavbarBackground-Image {
		position: absolute;
		width: 100%;
		height: var(--Navbar_Height);
		background-image: url(../../public/images/TopographicMap.png);
		filter: blur(0.75px);
		z-index: 0;
	}

	.NavbarMain-buttons {
		width: 50px;
	}

	.NavbarMenu-buttons {
		text-decoration: none;
	}

	.NavbarMenu-buttons > h2 {
		color: #ffffff;
		margin: 0 20px;
	}

	.NavbarMain-buttons,
	.NavbarMenu-buttons {
		height: var(--Navbar_Height);
		background-color: transparent;
		border: none;
		z-index: 1;
		display: grid;
		place-content: center;
	}

	.MainMenu,
	.NavbarMenu {
		display: flex;
		z-index: 1;
	}

	.NavbarMenu {
		width: 100%;
	}

	.Menu-Buttons {
		display: flex;
		transform: translateX(-50%);
		position: absolute;
		left: 50%;
	}

	/* SideBar */

	.Sidebar {
		position: absolute;
		top: 0;
		right: 0;
		width: 200px;
		height: 100vh;
		background-color: #41423f;
		transform: translateX(75%);
		transition: 0.2s;
		z-index: 2;
	}

	.Sidebar:hover {
		transform: translateX(0px);
		transition: 0.2s;
	}

	.SidebarTop {
		height: 50px;
		display: flex;
		align-items: center;
		margin: 0 5px;
	}

	/* Pages */
	.Pages {
		display: flex;
		flex-direction: column;
		width: calc(100% - 50px);
		height: calc(100vh - 50px);
		overflow-y: auto;
		overflow-x: hidden;
		background-image: url(../../public/images/MainMenu.jpg);
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center center;
	}

	/* Efects Select */

	h2.Select {
		box-shadow: 0 0 10px var(--ColoredText);
		color: var(--ColoredText);
	}
</style>
